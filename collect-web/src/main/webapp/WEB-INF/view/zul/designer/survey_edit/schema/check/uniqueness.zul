<?component name="fieldErrorHandler" class="org.openforis.collect.designer.component.FieldErrorHandler"?>
<zk>
  <custom-attributes parentDefinition="${arg.parentDefinition}"/>
  <custom-attributes check="${arg.check}"/>
  <custom-attributes newItem="${arg.newItem}"/>
  <vlayout
    id="formContainer"
    apply="org.zkoss.bind.BindComposer"
    viewModel="@id('vm') @init('org.openforis.collect.designer.viewmodel.UniquenessCheckVM')"
    validationMessages="@id('vmsgs')"
    form="@id('fx') 
      @load(vm.formObject) 
      @save(vm.formObject, before='applyChanges')
      @validator('org.openforis.collect.designer.form.validator.UniquenessCheckFormValidator', parentDefinition=parentDefinition)">
    <grid>
      <columns>
        <column label="" width="150px" />
        <column label="" width="100%" />
      </columns>
      <rows>
        <row>
          <label value="${labels.survey.schema.node.check.flag.$}:" />
          <listbox
              selectedItem="@bind(fx.flag)"
              mold="select" onSelect="@command('applyChanges')">
              <listitem
                label="${labels.survey.schema.node.check.flag.error}"
                value="ERROR" />
              <listitem
                label="${labels.survey.schema.node.check.flag.warning}"
                value="WARN" />
          </listbox>
        </row>
        <row>
          <label value="${labels.survey.schema.node.check.message}:" />
          <fieldErrorHandler message="@load(vmsgs['message'])">
            <textbox width="150px" value="@bind(fx.message)" 
                          onChange="@command('applyChanges')" />
          </fieldErrorHandler>
        </row>
        <row>
          <label value="${labels.survey.schema.node.check.condition}:" />
          <fieldErrorHandler message="@load(vmsgs['condition'])">
            <textbox width="150px" value="@bind(fx.condition)" onChange="@command('applyChanges')" />
          </fieldErrorHandler>
        </row>
        <row>
            <label value="${labels.survey.schema.node.check.uniqueness.expression}" />
            <fieldErrorHandler message="@load(vmsgs['expression'])">
	            <textbox value="@bind(fx.expression)"
	                    onChange="@command('applyChanges')" />
          	</fieldErrorHandler>
        </row>
      </rows>
    </grid>
  </vlayout>
</zk>
     